<h1> <%= @post.title %> </h1>
<p><%= @post.body %> </p>

<p><%= link_to 'Edit', edit_forum_post_path(@forum, @post) %> | <%= link_to 'Destroy', forum_post_path(@forum, @post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></p>

<p><%= link_to 'Back to Forum', forum_path(@forum) %>

<% if @post.comments.count > 0 %>
	<%= render @post.comments.reverse %>
	<%= @comment.created_at %>
<% end %> 


<%= render 'comments/form' %>