
<div class= 'col-md-6 col-md-offset-3'>

<div class = "form" >

  <%= simple_form_for @profile do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.label :image %><br>
      <%= f.input_field :image_url %>
      <%= f.input :ixyear, collection: ["2014", "2015"], label: 'Year', as: :select, :include_blank => false %>
      <%= f.input :session, collection: ["A","1", "2", "3"], label: "Session", as: :select, :include_blank => false  %>
      <%= f.input :university, label: "University", placeholder: "e.g. Yale" %>
      <%= f.input :city, label: "City where you live" %>
      <%= f.input :occupation, label: "Firm of Employment", placeholder: "e.g. Oracle" %>
      <%= f.input :degree, placeholder: "e.g. Computer Science" %>
      <%= f.country_select(:country, ["United States", "South Africa"]) %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>

</div>
  
