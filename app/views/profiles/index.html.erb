  <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->

<header class="intro-header" style="background-image: url('/images/session2lionshead.jpg')">
     <div class="container">
         <div class="row">
             <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
             <div class="profile-name">
                 <div class="site-heading">
                        <h1>Alumni Database</h1>
                        <hr class="small">
                        <span class="subheading"> Find Alumni iXers</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

<!-- Main Content -->
<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<div class="post-preview">
            <h2 class="post-title-profile">
                Search for alumni in database
            </h2>
            <h3 class="post-subtitle-profile"> </h3>
            <div class="searchbar" ><%= form_tag profiles_search_path, method: :get, class: "search-form" do %>
				<%= text_field_tag :q, params[:q] %>
				<%= submit_tag "Search" %> </div>
			<% end %>
        </div>
	</div>
</div>
<div class="row">
    <div class="col-lg-12">
           
         <table class='table'>

            <thead>
            	<tr>
	            	<th> Name </th>
	            	<th> iXyear</th>
	            	<th> Session </th>
	            	<th> University </th>
	            	<th> Occupation </th>
	        		<th colpan="6"></th>
	        		</tr>
        	</thead>
        	<tbody>
        	 <% @profiles.each do |profile| %>
        		<tr>
		            <td><%= link_to profile.firstname, profile_path(profile) %></td>
		            <td><%=profile.ixyear %></td>
		            <td><%=profile.session%></td>
		            <td><%=profile.university%></td>
		            <td><%=profile.occupation%></td>
		        </tr>
		        <% end %>
		    </tbody>
		</table>
	</div>
</div>



 